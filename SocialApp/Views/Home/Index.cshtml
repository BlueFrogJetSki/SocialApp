@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<SocialApp.Models.Post>

<div class="container-fluid gedf-wrapper">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6 gedf-main">


          
            @foreach(var post in Model)
            {
                var author = post.AuthorProfile;

                <!--- \\\\\\\Post-->
                <div class="card gedf-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="mr-2">
                                    <img class="rounded-circle" width="45" src="@author?.IconURL" alt="User Icon">
                                </div>
                                <div class="ml-2">
                                    <div class="h5 m-0">@author?.UserName</div>
                                  
                                </div>
                            </div>
                            <div>
                                <div class="dropdown">
                                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-ellipsis-h"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                        <div class="h6 dropdown-header">Configuration</div>
                                        <a class="dropdown-item" href="#">Save</a>
                                        <a class="dropdown-item" href="#">Hide</a>
                                        <a class="dropdown-item" href="#">Report</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        

                        <img class="img-fluid" src="@post.ImgURL" alt="Image">
                    </div>
                    <div class="card-text">
                         <b>@author?.UserName</b> @post.Description

                    </div>
                    <div class="card-footer">
                        <form method="post" asp-controller="Likes" asp-action="Create">
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="PostId" value="@post.Id" />
                            <input type="hidden" name="AuthorProfileId" value="@author.Id" />

                            <button type="submit" class="card-link">
                                @post.Likes.Count() likes
                            </button>
                        </form>
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" class="card-link"><i class="fa fa-comment"></i> Comment</a>
                        <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
                    </div>
                </div>
            }
           
          </div>
          </div>
        </div>
